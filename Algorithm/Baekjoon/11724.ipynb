import sys
#BFS
from collections import deque

def BFS(graph, root,visited):
    if(visited[root]==1):
        return 0
    queue = deque([root])
    visited[root]=1
    while queue:
        n = queue.popleft()
        for i in range (len(graph[n])):
            y  = graph[n][i]
            if(y != 0 and visited[y]==0): 
                queue.append(y)
                visited[y]=1
    return 1


n,m = map(int,input().split())
